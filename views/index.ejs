<h1>Welcome to CSE Motors!</h1>
<%-messages()%>

<% if (typeof messages === "function") { %>
  <div class="flash"><%- messages() %></div>
<% } %>

<section class="hero">
  <img
    src="/images/vehicles/delorean.jpg"
    alt="Delorean car"
    class="hero-img"/>
  <div class="hero-overlay">
    <h2>DMC Delorean</h2>
    <ul>
      <li>3 Cup holders</li>
      <li>Superman doors</li>
      <li>Fuzzy dice!</li>
    </ul>
    <a class="btn-img-link" href="/buy">
      <img class="btn-img" src="/images/site/own_today.png" alt="Own Today" />
    </a>
  </div>

  <div class="content-grid">
    <aside class="reviews card">
      <h2 id="reviews-title">DMC Delorean Reviews</h2>
      <ul class="quotes">
        <li>“So fast it’s almost like traveling in time.” (4/5)</li>
        <li>“Coolest ride on the road.” (4/5)</li>
        <li>“I’m feeling McFly!” (5/5)</li>
        <li>“The most futuristic ride of our day.” (4.5/5)</li>
        <li>“80’s livin’ and I love it!” (5/5)</li>
      </ul>
    </aside>

    <section class="upgrades card">
      <h2 id="upgrades-title">Delorean Upgrades</h2>
      <ul class="upgrades-grid">
        <li class="upgrade-item">
          <div class="thumb">
            <img src="/images/upgrades/flux-cap.png" alt="Flux Capacitor" />
          </div>
          <a class="upgrade-link" href="#">Flux Capacitor</a>
        </li>

        <li class="upgrade-item">
          <div class="thumb">
            <img src="/images/upgrades/flame.jpg" alt="Flame Decals" />
          </div>
          <a class="upgrade-link" href="#">Flame Decals</a>
        </li>

        <li class="upgrade-item">
          <div class="thumb">
            <img
              src="/images/upgrades/bumper_sticker.jpg"
              alt="Bumper Stickers"
            />
          </div>
          <a class="upgrade-link" href="#">Bumper Stickers</a>
        </li>

        <li class="upgrade-item">
          <div class="thumb">
            <img src="/images/upgrades/hub-cap.jpg" alt="Hub Caps" />
          </div>
          <a class="upgrade-link" href="#">Hub Caps</a>
        </li>
      </ul>
    </section>
  </div>
</section>
