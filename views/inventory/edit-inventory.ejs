<!-- views/inventory/add-inventory.ejs -->
<h1><%= title %></h1>

<% if (typeof messages === "function") { %>
<div class="flash"><%- messages() %></div>
<% } %> <% if (errors && errors.length) { %>
<div class="form-errors" role="alert" aria-live="polite">
  <ul>
    <% errors.forEach(e => { %>
    <li><%= e.msg %></li>
    <% }) %>
  </ul>
</div>
<% } %>

<form action="/inv/edit-inventory" method="post" class="inv-form">
  <div class="form-row">
    <label for="classificationList">Classification</label>
    <%- classificationList %>
  </div>

  <div class="form-row">
    <label for="inv_make">Make</label>
    <input
      id="inv_make"
      name="inv_make"
      type="text"
      required
      value="<%= typeof inv_make !== 'undefined' ? inv_make : '' %>"
    />
  </div>

  <div class="form-row">
    <label for="inv_model">Model</label>
    <input
      id="inv_model"
      name="inv_model"
      type="text"
      required
      value="<%= typeof inv_model !== 'undefined' ? inv_model : '' %>"
    />
  </div>

  <div class="form-row">
    <label for="inv_year">Year</label>
    <input
      id="inv_year"
      name="inv_year"
      type="text"
      inputmode="numeric"
      pattern="^[0-9]{4}$"
      maxlength="4"
      required
      title="Enter a 4-digit year (e.g., 2019)"
      value="<%= typeof inv_year !== 'undefined' ? inv_year : '' %>"
    />
  </div>

  <div class="form-row">
    <label for="inv_price">Price (USD)</label>
    <input
      id="inv_price"
      name="inv_price"
      type="number"
      min="0"
      step="1"
      required
      value="<%= typeof inv_price !== 'undefined' ? inv_price : '' %>"
    />
  </div>

  <div class="form-row">
    <label for="inv_miles">Miles</label>
    <input
      id="inv_miles"
      name="inv_miles"
      type="number"
      min="0"
      step="1"
      required
      value="<%= typeof inv_miles !== 'undefined' ? inv_miles : '' %>"
    />
  </div>

  <div class="form-row">
    <label for="inv_color">Color</label>
    <input
      id="inv_color"
      name="inv_color"
      type="text"
      required
      value="<%= typeof inv_color !== 'undefined' ? inv_color : '' %>"
    />
  </div>

  <div class="form-row">
    <label for="inv_image">Image Path</label>
    <input
      id="inv_image"
      name="inv_image"
      type="text"
      required
      value="<%= typeof inv_image !== 'undefined' ? inv_image : '/images/vehicles/no-image.png' %>"
    />
    <small class="help">e.g., /images/vehicles/no-image.png</small>
  </div>

  <div class="form-row">
    <label for="inv_thumbnail">Thumbnail Path</label>
    <input
      id="inv_thumbnail"
      name="inv_thumbnail"
      type="text"
      required
      value="<%= typeof inv_thumbnail !== 'undefined' ? inv_thumbnail : '/images/vehicles/no-image-tn.png' %>"
    />
    <small class="help">e.g., /images/vehicles/no-image-tn.png</small>
  </div>

  <div class="form-row">
    <label for="inv_description">Description</label>
    <textarea id="inv_description" name="inv_description" required rows="4">
<%= typeof inv_description !== 'undefined' ? inv_description : '' %></textarea
    >
  </div>

  <button type="submit" class="btn-primary">Update Vehicle</button>
</form>
