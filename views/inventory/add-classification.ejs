<h1><%= title %></h1>

<% if (typeof messages === "function") { %>
  <div class="flash"><%- messages() %></div>
<% } %>

<% if (errors && errors.length) { %>
  <div class="form-errors">
    <ul>
      <% errors.forEach(e => { %><li><%= e.msg %></li><% }) %>
    </ul>
  </div>
<% } %>

<form action="/inv/add-classification" method="post" class="auth-form">
  <p>Classification names must not contain spaces or special characters.</p>

  <div class="form-row">
    <label for="classification_name">Classification Name</label>
    <input
      id="classification_name"
      name="classification_name"
      type="text"
      required
      pattern="^[A-Za-z0-9]+$"
      value="<%= typeof classification_name !== 'undefined' ? classification_name : '' %>"
    />
  </div>

  <button type="submit" class="btn-primary">Add Classification</button>
</form>
